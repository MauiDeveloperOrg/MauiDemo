<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:handlers="using:MauiApp9.Handlers"
             x:Class="MauiApp9.CustomControls.OutlinedEntry"
             x:Name="this"
             RowDefinitions="50">

    <Label x:Name="lblPlaceholder" Grid.Row="0"
           Margin="10,0,10,0"
           Text="UserName" 
           FontSize="15"
           TextColor="Gray"
           BackgroundColor="Transparent"
           HorizontalOptions="StartAndExpand" 
           VerticalOptions="Center"/>

    <Frame x:Name="faeBorder" Padding="8" BorderColor="Gray" BackgroundColor="Transparent">
        <handlers:BorderlessEntry Text="{Binding Source={x:Reference this}, Path=Text}" 
               Focused="Entry_Focused" 
               Unfocused="Entry_Unfocused"/>
    </Frame>
   
</Grid>
